{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted('ROLE_ADMIN') %}
        Duyuru Yönetimi
    {% else %}
        Duyurularım
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('announce') }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            Duyuru düzenlemektesiniz
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li><a href="{{ path('announce_index') }}">
                    {% if is_granted('ROLE_ADMIN') %}
                        Duyuru Yönetimi
                    {% else %}
                        Duyurularım
                    {% endif %}
                </a></li>
            <li class="active"><a href="{{ path('announce_edit', {id:announce.id}) }}">
                    {{ announce.name }}</a></li>

        </ol>
    </section>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!--
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                </div>-->
                <!-- /.box-header -->
                <!-- form start -->

                {{ include('announce/_form.html.twig') }}

                <div class="box-footer">
                    <a class="btn btn-primary" style="margin-right: 10px;"
                       href="{{ path('announce_show',{id:announce.id}) }}">Geri</a>
                    <button class="btn btn-success">{{ button_label|default('Güncelle') }}</button>

                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('announce') }}
{% endblock %}
