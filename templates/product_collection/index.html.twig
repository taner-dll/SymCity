{% extends 'base.html.twig' %}

{% block title %}Koleksiyon Alt Grupları Listesi{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Koleksiyon Alt Grupları Listesi</h3>
                    <a class="btn btn-success pull-right" href="{{ path('product_collection_new') }}">
                        <i class="fa fa-plus"></i> Yeni Ekle</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-condensed table-hover">
                        <tbody>
                        <tr>

                            <th>Koleksiyon İsmi</th>
                            <th>Model Kodu</th>
                            <th>Resim</th>
                            <th></th>
                        </tr>

                        {% for product_collection in product_collections %}
                            <tr>

                                <td>{{ product_collection.name }}</td>
                                <td>{{ product_collection.modelCode }}</td>
                                <td>
                                    <img src="{{ asset('uploads/collections/'~ product_collection.picture) }}"
                                         width="153"
                                         height="40"/>
                                </td>
                                <td style="width: 25%;">
                                    <a class="btn btn-xs btn-primary pull-left" href="{{ path('product_collection_show',
                                        {'id': product_collection.id}) }}">Göster</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <hr>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="box-footer">


                </div>
            </div>
        </div>

    </div>
{% endblock %}
