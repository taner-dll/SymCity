{% extends 'base.html.twig' %}

{% block title %}Ürün Detayı{% endblock %}

{% block body %}


    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Ürün Detayı</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-6">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Ürün Yapısı</th>
                            <td>
                                {% if product.property == 'collection' %}
                                    {{ product.collection.name }}
                                {% else %}
                                    Custom
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Ürün Adı</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Ürün Kodu</th>
                            <td>{{ product.code }}</td>
                        </tr>
                        <tr>
                            <th>Ürün Tipi</th>
                            <td>{{ product.type }}</td>
                        </tr>
                        <tr>
                            <th>Ürün Resmi</th>
                            <td>{{ product.picture }}</td>
                        </tr>
                        <tr>
                            <th>Fiyatı</th>
                            <td>{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th>Özellikler</th>
                            <td>{{ product.properties }}</td>
                        </tr>
                        <tr>
                            <th>Paketleme</th>
                            <td>{{ product.packaging }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <hr>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="col-sm-6">
                    {% if product.picture != "" %}
                    <img class="img-responsive" style="border: 1px solid gray"
                         src="{{ asset('uploads/products/')~product.picture }}" height="250" width="400">
                    {% endif %}
                </div>
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ path('product_index') }}" class="btn btn-primary" style="margin-right: 10px;">Ürün Listesi</a>
            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning"
               style="margin-right: 10px;">Düzenle</a>
            <!-- Button trigger modal -->
            <a class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Sil
            </a>
            {{ include('product/_delete_form.html.twig') }}
        </div>
        <!-- /.box-footer-->
    </div>




{% endblock %}
