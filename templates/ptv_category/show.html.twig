{% extends 'base.html.twig' %}

{% block title %}Gezilecek Yer Kategorisi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            Gezilecek Yer Kategorisi
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li><a href="{{ path('p_t_v_category_index') }}">Gezilecek Yer Kategorisi</a></li>
            <li class="active"><a href="{{ path('p_t_v_category_show',
                    {'id': p_t_v_category.id}) }}"></a></li>

        </ol>
    </section>

{% endblock %}


{% block body %}

    <div class="box">

        <!--
        <div class="box-header with-border">
            <h3 class="box-title">Gezilecek Yerler</h3>
        </div>

       -->
        <div class="box-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Kısa Ad</th>
                            <td>{{ p_t_v_category.shortName }}</td>
                        </tr>
                        <tr>
                            <th>Sıralama</th>
                            <td>{{ p_t_v_category.sort }}</td>
                        </tr>
                        <tr>
                            <th>Aktif?</th>
                            <td>{{ p_t_v_category.active ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ path('p_t_v_category_index') }}" class="btn btn-primary" style="margin-right: 10px;">Liste</a>
            <a href="{{ path('p_t_v_category_edit', {'id': p_t_v_category.id}) }}"
               class="btn btn-warning"
               style="margin-right: 10px;">Düzenle</a>
            <!-- Button trigger modal -->
            <a class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Sil
            </a>
            {{ include('ptv_category/_delete_form.html.twig') }}
        </div>
        <!-- /.box-footer-->
    </div>



    {% for message in app.flashes('success') %}
        <input type="hidden" id="success_message" value="{{ message }}"/>
    {% endfor %}


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('business') }}
{% endblock %}