{% extends 'base.html.twig' %}

{% block title %}
    {% if is_granted('ROLE_ADMIN') %}
        Etkinlik Yönetimi
    {% else %}
        Etkinliklerim
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            {% if is_granted('ROLE_ADMIN') %}
                Etkinlik Yönetimi
            {% else %}
                Etkinliklerim
            {% endif %}
            <small></small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li class="active"><a href="{{ path('event_index') }}">
                    {% if is_granted('ROLE_ADMIN') %}
                        Etkinlik Yönetimi
                    {% else %}
                        Etkinliklerim
                    {% endif %}
                </a></li>

        </ol>
    </section>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <!--
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                -->
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="example1_wrapper"
                                 class="dataTables_wrapper form-inline dt-bootstrap table-responsive">
                                <table id="example1" class="table table-bordered table-striped
                                table-hover table-condensed
                                dataTable" role="grid" aria-describedby="example1_info">
                                    <thead>
                                    <tr role="row">
                                        <th>Onay Durumu</th>

                                        <th>Etkinlik Adı</th>

                                        <th>Bölge</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>

                                        {% if is_granted('ROLE_ADMIN') %}
                                            <th>Ekleyen</th>
                                        {% endif %}
                                        <th>İşlem</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for event in events %}
                                        <tr>
                                            <td>
                                                {% if  event.confirm == 0 %}
                                                    <span class="label label-warning">
                                                        <i class="fa fa-clock-o"></i>
                                                        Onay Bekliyor</span>
                                                {% elseif event.confirm == 1 %}
                                                    <span class="label label-success">
                                                        <i class="fa fa-check"></i>
                                                        Yayında</span>
                                                {% elseif event.confirm == 2 %}
                                                    <span class="label label-info">
                                                        <i class="fa fa-save"></i>
                                                        Taslak</span>
                                                {% endif %}
                                            </td>

                                            <td>{{ event.name[:20]|striptags }}&hellip;</td>

                                            <td>{{ event.place ? event.place.name : '' }}</td>
                                            <td>{{ event.start ? event.start|date('d/m/Y H:i') : '' }}</td>
                                            <td>{{ event.end ? event.end|date('d/m/Y H:i') : '' }}</td>

                                            {% if is_granted('ROLE_ADMIN') %}
                                                <td>

                                                    {{ event.user.username }}

                                                </td>
                                            {% endif %}
                                            <td>
                                                <a href="{{ path('event_show', {'id': event.id}) }}"
                                                   class="btn btn-xs btn-primary pull-left">Detaylı Göster</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">Kayıtlı etkinliğiniz bulunmamaktadır.</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>


                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </div>

    </div>


    {% for message in app.flashes('success') %}
        <input type="hidden" id="success_message" value="{{ message }}"/>
    {% endfor %}

{% endblock %}




{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
{% endblock %}
