{% extends 'base.html.twig' %}

{% block title %}Etkinlikler{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            Etkinlikler
            <small>{{ event.name }}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li><a href="{{ path('event_index') }}">Etkinlikler</a></li>
            <li class="active"><a href="{{ path('event_show', {id:event.id}) }}">
                    {{ event.name }}</a></li>

        </ol>
    </section>

{% endblock %}

{% block body %}


    <div class="box">

        <!--
        <div class="box-header with-border">
            <h3 class="box-title">Gezilecek Yerler</h3>
        </div>

       -->
        <div class="box-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ event.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ event.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.description|raw }}</td>
                        </tr>
                        <tr>
                            <th>Start</th>
                            <td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>End</th>
                            <td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% if event.image|length > 0 %}

                                    <img src="{{ asset('uploads/event/')~event.image }}" width="300"
                                         height="225"/>
                                    <a class="btn-default btn-xs"
                                       href="{{ path('event_featured_photo_delete',
                                           {event:event.id,
                                               _token:csrf_token('delete-featured-photo'~event.id)}) }}"
                                       target="_self"
                                       onclick="return confirm('Are you sure you want to delete this item?');"
                                       style="position: absolute;"><i class="fa fa-close"></i></a>


                                {% endif %}

                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ path('event_index') }}" class="btn btn-primary" style="margin-right: 10px;">Liste</a>
            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning"
               style="margin-right: 10px;">DÃ¼zenle</a>
            <!-- Button trigger modal -->
            <a class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Sil
            </a>
            {{ include('event/_delete_form.html.twig') }}
        </div>
        <!-- /.box-footer-->
    </div>



    {% for message in app.flashes('success') %}
        <input type="hidden" id="success_message" value="{{ message }}"/>
    {% endfor %}



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
{% endblock %}