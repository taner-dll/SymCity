<header class="main-header">
    <!-- Logo -->
    <a href="{{ path('our_products') }}" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>E</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Elifle</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li>
                    <div class="btn-group" style="padding-top: 8px;padding-right: 100px">
                        <button type="button" class="btn btn-success">
                            {% if app.session.get('currency')  %}
                                {{ app.session.get('currency')|upper }}
                            {% else %}
                                EUR
                            {% endif %}
                        </button>
                        <button type="button" class="btn btn-success dropdown-toggle"
                                data-toggle="dropdown" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('change_currency',{'cur':'usd'}) }}">Change Currency to USD</a></li>
                            <li><a href="{{ path('change_currency',{'cur':'eur'}) }}">Change Currency to EURO</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="{{ path('cart') }}">
                        <span class="badge bg-red">
                            {{ app.session.get('cart_elements')|length }}
                        </span>
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>