<header class="main-header">

    <!-- Logo -->
    <a href="{{ path('index') }}" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><i class="fa fa-map-marker"></i></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><i class="fa fa-map-marker"></i>
         {% if is_granted('ROLE_ADMIN') %}
             EK ADMIN
         {% else %}
             Edremit Körfezi
         {% endif %}
        </span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>



        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">



                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-caret-down"></i>
                        <!--<img src="{{ asset('build/img/user2-160x160.jpg') }}"
                        class="user-image" alt="User Image">-->
                        <span class="hidden-xs">{{ app.user.email }}</span>
                    </a>
                    <ul class="dropdown-menu">


                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <!--<a href="#" class="btn btn-default btn-flat">Profile</a>-->
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <div class="alert alert-danger" style="margin-bottom: 0;">
                                        You are currently switched to this user.
                                        <a href="{{ path('app_dashboard', {'_switch_user': '_exit'}) }}">Exit Impersonation</a>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat">Çıkış Yap</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                <!--
                <li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gear"></i></a>
                </li>
                -->
            </ul>
        </div>
    </nav>

</header> 