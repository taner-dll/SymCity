{% extends 'base.html.twig' %}

{% block title %}Geri Bildirim{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('feedback') }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            Geri Bildirim
            <small></small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li class="active"><a href="{{ path('app_feedback') }}">Geri Bildirim</a></li>
        </ol>
    </section>

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <!--
                <div class="box-header">
                    <h3 class="box-title"></h3>
                </div>
                -->
                <!-- /.box-header -->
                <div class="box-body">
                    <form id="fb-form" method="post" action="{{ path('ajax_send_feedback') }}">

                        <div class="col-md-6">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="fb-subject"></label>
                                        <select id="fb-subject" required="required" class="form-control">
                                            <option value="" selected="selected">Mesaj Konusunu Seçiniz</option>
                                            <option value="suggestion">Yeni Özellik Tavsiyesi</option>
                                            <option value="error">Yazılımsal Hata Bildirimi</option>
                                            <option value="other">Diğer</option>
                                        </select>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="fb-message">Mesajınız <span>*</span></label>
                                        <textarea id="fb-message" rows="10" class="form-control" name="description" required
                                                  placeholder="Bize iletmek istediğiniz mesajınızı buraya yazınız"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <button type="button" id="fb_submit_btn"
                                                class="btn btn-success">Mesaj Gönder
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="callout">
                                <p style="font-style: italic">
                                    Geri bildirimleriniz, sistemin geliştirilmesi hususunda bizim için çok değerlidir.
                                    Mesajlarınız mutlaka okunup dikkate alınacaktır.
                                </p>
                            </div>

                            <div class="callout">
                                <p style="font-style: italic">
                                    Uygulama içerisinde "bu da olsa iyi olurdu" dediğiniz her türlü önerinizi bekliyoruz.
                                    Tüm hizmetleri ücretsiz olan bu özgür platformun, bölge halkına daha iyi hizmet verebilmesi
                                    adına, fikirlerinize daima ihtiyaç duymaktayız.
                                </p>
                            </div>
                        </div>

                    </form>

                </div>
                <!-- /.box-body -->

                <div class="overlay" id="fb-overlay" style="display: none">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        </div>

    </div>



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('feedback') }}
{% endblock %}