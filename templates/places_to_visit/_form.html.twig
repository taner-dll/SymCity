{% form_theme form 'form/fields.html.twig' %}
<div class="box-body">
    {{ form_start(form) }}
    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.name, 'Yer Adı') }}
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group">
            {{ form_label(form.type, 'Yer Tipi') }}
            {{ form_widget(form.type) }}
        </div>
        <div class="form-group">
            {{ form_label(form.maps, 'Harita [Google Place ID]') }}
            {{ form_widget(form.maps) }}
        </div>
        <div class="form-group">
            {{ form_label(form.about, 'Hakkında') }}
            {{ form_widget(form.about) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.phone, 'Telefon') }}
            {{ form_widget(form.phone) }}
        </div>
        <div class="form-group">
            {{ form_label(form.web, 'Web Site') }}
            {{ form_widget(form.web) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'E-Posta') }}
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group">
            {{ form_label(form.address, 'Adres') }}
            {{ form_widget(form.address) }}
        </div>
        <div class="form-group">
            {{ form_label(form.featured_picture, 'Öne Çıkan Resim') }}
            {{ form_widget(form.featured_picture) }}
            <input type="hidden" id="cropped_image" name="cropped_image" />
        </div>
        <div class="form-group">
            {% if app.request.get('_route') == 'places_to_visit_edit' %}
            <img id="preview" src="{{ asset('uploads/ptv/')~places_to_visit.featuredPicture }}"
                 class="img-responsive img-bordered" width="300" height="225"  alt=""/>
            {% else %}
                <img id="preview" src=""
                     class="img-responsive img-bordered" width="300" height="225" alt="" />
            {% endif %}
        </div>



        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Resim Düzenle</h4>
                    </div>
                    <div class="modal-body" style="overflow: hidden">
                        <img alt="" src="" id="selected_image" style="max-width: 800px; max-height: 500px;"/>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default" data-method="zoom" data-option="0.1"
                                    title="Zoom In" onclick="$('#selected_image').cropper('zoom', 0.1)">

                                <span class="fa fa-search-plus"></span>

                            </button>
                            <button type="button" class="btn btn-default" data-method="zoom" data-option="-0.1"
                                    title="Zoom Out" onclick="$('#selected_image').cropper('zoom', -0.1)">

                                <span class="fa fa-search-minus"></span>

                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="crop_image"  onclick="$('#image_demo').cropper('crop')"
                                type="button" class="btn btn-default" data-dismiss="modal">Seç</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>