{% extends 'base.html.twig' %}

{% block title %}İlan Alt Kategorisi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('ad_sub_category') }}
{% endblock %}

{% block breadcrumb %}

    <section class="content-header">
        <h1>
            İlan Alt Kategorisi <small>Liste</small>
        </h1>

        <ol class="breadcrumb">
            <li><a href="{{ path('app_dashboard') }}">Ana Sayfa</a></li>
            <li class="active"><a href="{{ path('ad_sub_category_index') }}">İlan Alt Kategorisi</a></li>

        </ol>
    </section>

{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-md-12">

            <div class="box">

                <div class="box-header">
                    <a href="{{ path('ad_sub_category_new') }}"
                       class="btn btn-success btn-xs pull-right    ">
                        <i class="fa fa-plus"></i> Yeni Ekle</a>
                </div>

                <!-- /.box-header -->
                <div class="box-body">


                    <div class="row">

                        {% set all_names = [] %}
                        {% for cn in category_names %}

                            {% set all_names = all_names|merge([cn.shortName]) %}


                            <div class="col-md-6">

                                <h3 style="font-weight: bold;text-decoration: underline">
                                    {{ cn.shortName| trans({}, 'advert') }}</h3>

                                <div id="sort_list_{{ cn.shortName }}" class="list-group"
                                     style="max-height: 300px;min-height:300px;overflow:auto;background: #eeeeee">


                                    {% for cn_sub in cn.sub %}

                                        <div data-shortname="{{ cn_sub.shortName }}" data-sort-no=""
                                             class="list-group-item" style="cursor: pointer">
                                            {{ cn_sub.shortName|trans({}, 'advert') }}
                                            <a href="{{ path('ad_sub_category_show', {'id': cn_sub.id}) }}"
                                               class="btn btn-xs btn-default pull-right">Göster</a>
                                        </div>


                                    {% endfor %}


                                </div>


                            </div>


                        {% endfor %}


                        <input type="hidden" id="all_names" value="{{ all_names|json_encode }}"/>


                    </div>


                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <input type="hidden" id="success_message" value="{{ message }}"/>
    {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    {{ encore_entry_script_tags('ad_sub_category') }}
{% endblock %}