                            {#{% endfor %}#}



                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            {# display navigation #}
                            <div class="navigation">
                                {{ knp_pagination_render(adverts) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">

                    </div>

                </div>


            </div>
        </div>
    </section>



{% endblock %}

{% block javascripts %}

    {{ parent() }}
    {{ encore_entry_script_tags('ad_guide') }}



{% endblock %}