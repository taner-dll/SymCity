{% extends 'web_site/base.html.twig' %}

{% block title %}{{ 'adverts.title'|trans({}, 'advert') }}{% endblock %}

{% block body %}

    <section id="inner-banner">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="inner_banner_detail">
                        <h2>{{ 'adverts.title'|trans({}, 'advert') }}</h2>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section id="popular-listing" class="p_b30 p_t30">
        <div class="container">
            <div class="row">


                <div class="col-md-9 col-sm-9 col-xs-12">

                    <div class="row">

                        <div class="col-md-12">

                            {% for a in adverts %}

                                <div class="popular-listing-box">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-12">
                                            <div class="popular-listing-img">
                                                <figure class="effect-ming">

                                                    {% if a.featuredImage is not null %}
                                                        <img src="{{ asset('uploads/place_an_ad/')~a.featuredImage }}"
                                                             alt="image">
                                                    {% else %}
                                                        <img src="{{ asset('build/img/no-image-800x432.png') }}"
                                                             alt="image">

                                                    {% endif %}
                                                </figure>
                                            </div>
                                        </div>
                                        <div class="col-md-8 col-sm-8 col-xs-12">

                                            <div class="popular-listing-detail"
                                            >
                                                <h3><a href="{{ path('advert_detail', {
                                                        id:a.id,
                                                        cat:a.category.shortname,
                                                        sub:a.subcategory.shortname,
                                                        slug:a.slug
                                                    }) }}">
                                                        {{ a.title|title }}</a></h3>
                                                <p>{{ (a.description|striptags)[:100] }}&hellip;</p>
                                            </div>

                                            <div class="popular-listing-add">

                                                <div class="row">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">

                                                        <span style="margin-left: 5px; font-size: 11px">
                                                             Yer:
                                                            {{ a.place.name }}
                                                        </span>

                                                        <span style="margin-left: 10px; font-size: 11px">
                                                            Tarih:
                                                        {{ a.lastUpdate|date('d/m/Y') }}
                                                        </span>

                                                        <span style="margin-left: 10px; font-size: 11px;">
                                                            Fiyat:
                                                            <strong style="color: #9f191f">{{ a.price }}</strong>
                                                         </span>

                                                        <a href="{{ path('advert_detail', {
                                                            id:a.id,
                                                            cat:a.category.shortname,
                                                            sub:a.subcategory.shortname,
                                                            slug:a.slug
                                                        }) }}"
                                                           class="pull-right btn btn-default btn-xs">Göster</a>

                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>

                                </div>

                            {% endfor %}

                        </div>

                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            {# display navigation #}
                            <div class="navigation">
                                {{ knp_pagination_render(adverts) }}
                            </div>
                        </div>
                    </div>

                </div>


                <div class="col-md-3 col-sm-3 col-xs-12 listing-rightbar">

                    {% if app.request.get('name') is not null or
                        app.request.get('cat') is not null or
                        app.request.get('place') is not null %}

                        <div class="right-bar bg_white">
                            Arama sonuçlarına göre,<br>
                            toplam <b>{{ adverts|length }}</b> kayıt listelendi.
                        </div>

                    {% endif %}

                    <div class="right-bar bg_white">
                        <h4>{{ 'adverts.advanced'|trans({}, 'advert') }}
                            <span>{{ 'adverts.searching'|trans({}, 'advert') }}</span></h4>
                        <form class="form-right" method="get"
                              action="{{ app.request.schemeAndHttpHost ~ app.request.requestUri }}">


                            <div class="form-group">
                                <label for="name">{{ 'adverts.business_name'|trans({}, 'advert') }}</label>

                                {% set bname = "" %}
                                {% if app.request.get('name') is not null %}
                                    {% set bname = app.request.get('name') %}
                                {% endif %}
                                <label for="name"></label><input class="form-control" id="name" minlength="3"
                                                                 name="name" value="{{ bname }}" type="text">
                            </div>

                            <div class="form-group">
                                <label for="cat">{{ 'adverts.category'|trans({}, 'advert') }}</label><br>
                                <select name="cat" id="cat">
                                    <option value="">Hepsi</option>
                                    {% for key, value in categories %}
                                        <option
                                                {% set selected = '' %}
                                                {% if value['shortname'] == app.request.get('cat') %}
                                                    {% set selected = 'selected' %}
                                                {% endif %}

                                                {{ selected }}

                                                value="{{ value['shortname'] }}">{{ value['shortname']| trans({}, 'advert') }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="cat">{{ 'adverts.sub_category'|trans({}, 'advert') }}</label><br>
                                <select name="sub" id="sub">
                                    <option value="">Hepsi</option>
                                    {% for key, value in sub_categories %}
                                        <option
                                                {% set selected = '' %}
                                                {% if value['shortname'] == app.request.get('sub') %}
                                                    {% set selected = 'selected' %}
                                                {% endif %}

                                                {{ selected }}

                                                value="{{ value['shortname'] }}">{{ value['shortname']| trans({}, 'advert') }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="place">{{ 'adverts.place'|trans({}, 'advert') }}</label><br>
                                <select name="place" id="place">
                                    <option value="">Hepsi</option>
                                    {% for p in places %}
                                        <option
                                                {% set selected = '' %}
                                                {% if p.id == app.request.get('place') %}
                                                    {% set selected = 'selected' %}
                                                {% endif %}

                                                {{ selected }}

                                                value="{{ p.id }}">{{ p.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <button>{{ 'adverts.search'|trans({}, 'advert') }}</button>
                            </div>
                        </form>


                        <a href="{{ path('adverts') }}" style="text-decoration: underline">
                            Aramayı Sıfırla
                        </a>
                    </div>


                    <div class="right-bar bg_white">
                        <h4>{{ 'adverts.category'|trans({}, 'advert') }}
                            <span>{{ 'adverts.list'|trans({}, 'advert') }}</span></h4>
                        <ul class="right-bar-listing">
                            {% for key, value in categories %}



                                <li>
                                    <a href="{{ path('adverts') }}?cat={{ value['shortname'] }}">

                                        {{ value['shortname']| trans({}, 'advert') }}
                                        <span>({{ value['total'] }})</span>
                                    </a>
                                </li>

                            {% endfor %}
                        </ul>


                    </div>

                </div>

            </div>
        </div>
    </section>



{% endblock %}

{% block javascripts %}

    <script type="application/javascript">
        // Remove empty fields from GET forms
        // Author: Bill Erickson
        // URL: http://www.billerickson.net/code/hide-empty-fields-get-form/

        // Change 'form' to class or ID of your specific form
        $("form").submit(function () {
            $(this).find(":input").filter(function () {
                return !this.value;
            }).attr("disabled", "disabled");
            return true; // ensure form still submits
        });

        // Un-disable form fields when page loads, in case they click back after submission
        $("form").find(":input").prop("disabled", false);
    </script>

{% endblock %}