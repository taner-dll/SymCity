                            </li>

                            <li>
                                <a href="{{ path('announces') }}" class="dropdown-toggle" data-toggle="dropdown">Duyurular</a>
                            </li>




                            <! ilan menusu ->
                            {{ render(controller('App\\Controller\\WebSiteController::advertMenu')) }}


                            <li>
                                <a href="{{ path('business_guide') }}" class="dropdown-toggle" data-toggle="dropdown">
                                    İşletme Rehberi
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
