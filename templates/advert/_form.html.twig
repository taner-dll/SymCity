{% form_theme form 'form/fields.html.twig' %}
<div class="box-body">
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-4">

            <div class="form-group">
                {{ form_label(form.title, 'İlanı Tanıtan Kısa Başlık') }}
                {{ form_widget(form.title) }}
            </div>

            <div class="form-group">
                {{ form_label(form.owner, 'İlanda Görülecek İsim') }}
                {{ form_widget(form.owner) }}
            </div>


            <div class="form-group">

                {{ form_label(form.category, 'Kategori') }}
                {{ form_widget(form.category) }}

            </div>

            <div class="form-group" id="cat_change_msg"></div>

            <div class="form-group">

                {{ form_label(form.sub_category, 'Alt Kategori') }}
                {{ form_widget(form.sub_category) }}

                <img id="sub_cat_loader"
                     style="height: 16px;width: 16px;margin-top: -4px;display: none"
                     src="{{ asset('build/img/front_end/loading.gif') }}"  alt=""/>
            </div>

            <div class="form-group" id="div_advert_status">
                {{ form_label(form.status, 'İlan Durumu') }}
                {{ form_widget(form.status) }}
            </div>




        </div>

        <div class="col-md-4">




            <div class="form-group">

                {{ form_label(form.price, 'Fiyat / Ücret (TL)  örnek: 1.000,00') }}
                {{ form_widget(form.price) }}


                {{ form_help(form.secretPrice) }}
                {{ form_widget(form.secretPrice) }}


            </div>

            <div class="form-group">

                {{ form_label(form.telephone, 'Telefon') }}
                {{ form_widget(form.telephone) }}

                {{ form_help(form.secretPhone) }}
                {{ form_widget(form.secretPhone) }}


            </div>


            {#<div class="form-group">

                {{ form_label(form.email, 'E-posta') }}
                {{ form_widget(form.email) }}
                {{ form_widget(form.secretEmail) }}

            </div>#}

            <div class="form-group">
                {{ form_label(form.place, 'Bölge') }}
                {{ form_widget(form.place) }}

                <img id="opt_loader"
                     style="height: 16px;width: 16px;display: none"
                     src="{{ asset('build/img/front_end/loading.gif') }}"  alt=""/>

            </div>


            <div class="form-group">
                {{ form_label(form.sub_place, 'Semt / Mah.') }}
                {{ form_widget(form.sub_place) }}

                <img id="sub_place_loader"
                     style="height: 16px;width: 16px;margin-top: -4px;display: none"
                     src="{{ asset('build/img/front_end/loading.gif') }}"  alt=""/>

            </div>


        </div>

        <div class="col-md-4">






            <div class="form-group">
                {{ form_label(form.featured_image, 'Öne Çıkan Görsel') }}
                {{ form_widget(form.featured_image) }}
                <input type="hidden" id="cropped_image" name="cropped_image"/>
            </div>
            <div class="form-group" id="img_preview_div">

                {% if app.request.get('_route') == 'announce_edit' %}

                    <img id="preview" src="{{ asset('uploads/announce/')~announce.image }}"
                         class="img-responsive img-bordered" width="400" height="216" alt=""/>
                {% else %}
                    <img id="preview" src=""
                         class="img-responsive img-bordered" width="400" height="216" alt=""/>
                {% endif %}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-block btn-success">
                    {{ button_label|default('İlanı Kaydet') }}
                </button>
            </div>


        </div>
    </div>

    <div class="row">

        <div class="col-md-12">

            <div class="form-group">
                {{ form_label(form.description, 'İlan Açıklaması') }}
                {{ form_widget(form.description) }}
            </div>

        </div>


    </div>


</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Resim Düzenle</h4>
            </div>
            <div class="modal-body" style="overflow: hidden">
                <img alt="" src="" id="selected_image" style="max-width: 800px; max-height: 500px;"/>
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-method="zoom" data-option="0.1"
                            title="Zoom In" onclick="$('#selected_image').cropper('zoom', 0.1)">

                        <span class="fa fa-search-plus"></span>

                    </button>
                    <button type="button" class="btn btn-default" data-method="zoom" data-option="-0.1"
                            title="Zoom Out" onclick="$('#selected_image').cropper('zoom', -0.1)">

                        <span class="fa fa-search-minus"></span>

                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button id="crop_image" onclick="$('#image_demo').cropper('crop')"
                        type="button" class="btn btn-default" data-dismiss="modal">Seç
                </button>
            </div>
        </div>
    </div>
</div>