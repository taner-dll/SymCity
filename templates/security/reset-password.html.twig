{% extends 'base_login.html.twig' %}

{% block title %}Parola Güncelleme | Edremit Körfezi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}


{% block body %}

    <body class="hold-transition login-page"
          style="background-image: url('../../assets/img/front_end/banner-1.jpg');
          background-repeat: no-repeat;
          background-size: 100% 100%;">

    <div class="login-box">
        <div class="login-logo">
            <h2 style="color:#FFFFFF;">Edremit Körfez Portalı</h2>
            <h4 style="color:#FFFFFF;font-style: oblique">"Körfezin Kısayolu"</h4>

        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <form class="form-signin" method="post" action="{{ path('update_password') }}">


                <h4><i class="icon fa fa-info-circle"></i> Sayın{{ full_name }}, </h4>
                <p>Lütfen yeni parolanızı belirleyiniz.</p>

                <input type="hidden" name="code" value="{{ code }}" />
                <input type="hidden" name="user_mail" value="{{ user_mail }}" />
                <input type="hidden" name="token" value="{{ csrf_token('reset-password') }}" />


                {% for message in app.flashes('error') %}
                    <div class="alert alert-error alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}


                <div class="form-group has-feedback">
                    <label for="password" class="sr-only">Parola</label>
                    <input type="password" name="password" id="password"
                           class="form-control" placeholder="Yeni parolanızı giriniz (min. 6 karakter)" required autofocus>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>


                <div class="form-group has-feedback">
                    <label for="re_password" class="sr-only">Parola Tekrarı</label>
                    <input type="password" name="re_password" id="re_password"
                           class="form-control" placeholder="Yeni parolanızı tekrar giriniz" required autofocus>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>

                <div class="row">

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success btn-block btn-flat">
                            Şimdi Güncelle
                        </button>

                        <hr>
                        <a href="{{ path('app_login') }}">
                            ya da bu işlemden vazgeç ve giriş ekranına git
                        </a>
                    </div>

                </div>
            </form>


        </div>
    </div>
    <!-- /.login-box-body -->

    {% for message in app.flashes('success') %}
        <input type="hidden" id="success_message" value="{{ message }}"/>
    {% endfor %}


    </body>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    {{ encore_entry_script_tags('register') }}
{% endblock %}