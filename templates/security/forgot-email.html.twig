{% extends 'base_login.html.twig' %}

{% block title %}Şifremi Unuttum | Edremit Körfezi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}


{% block body %}

    <body class="hold-transition login-page"
          style="background-image: url('../../assets/img/front_end/banner-1.jpg');
          background-repeat: no-repeat;
          background-size: 100% 100%;">

    <div class="login-box">
        <div class="login-logo">
            <h2 style="color:#FFFFFF;">Edremit Körfez Portalı</h2>
            <h4 style="color:#FFFFFF;font-style: oblique">"Körfezin Kısayolu"</h4>

        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <form class="form-signin" method="post">


                <p class="login-box-msg">

                    Şifremi Unuttum<br>


                    {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                </p>


                <div class="form-group has-feedback">
                    <label for="username" class="sr-only">Username</label>
                    <input type="text" name="username" id="inputUsername" value="{{ last_username }}"
                           class="form-control" placeholder="Username" required autofocus>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>

                <div class="row">

                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">
                            <i class="fa fa-user-circle"></i> Giriş Yap
                        </button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <hr>

            <a class="btn btn-sm btn-success btn-flat btn-block" href="{{ path('app_register') }}">
                Yeni Hesap Oluştur
            </a>
        </div>
    </div>
    <!-- /.login-box-body -->



    </body>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    {{ encore_entry_script_tags('register') }}
{% endblock %}