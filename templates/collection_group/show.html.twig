{% extends 'base.html.twig' %}

{% block title %}Koleksiyon Grup Detayı{% endblock %}

{% block body %}

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Koleksiyon Grup Detayı</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-6">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ collection_group.id }}</td>
                        </tr>
                        <tr>
                            <th>Koleksiyon Grup Adı</th>
                            <td>{{ collection_group.name }}</td>
                        </tr>
                        <tr>
                            <th>Alt Gruplar</th>
                            <td>

                                {% for c in  collection_group.prodcollection %}
                                    <a href="{{ path('product_collection_show', {id:c.id}) }}">{{ c.name }}</a>&nbsp;
                                {% endfor %}

                            </td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>
                                <form method="post" action="{{ path('update_collection_status') }}">

                                    <select name="status" class="form-control">

                                        {% if collection_group.enable == 0 %}
                                            <option value="0" selected>Pasif</option>
                                            <option value="1">Aktif</option>
                                        {% else %}
                                            <option value="0">Pasif</option>
                                            <option value="1" selected>Aktif</option>
                                        {% endif %}

                                    </select>
                                    <br>
                                    <button type="submit"
                                            class="btn btn-sm btn-success pull-right">Güncelle
                                    </button>

                                    <input type="hidden" name="collection_id" value="{{ collection_group.id }}"/>

                                </form>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-6">
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">

                        </div>
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-ban"></i> Uyarı!</h4>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                        <div class="flash-notice">

                        </div>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-check"></i> Tebrikler!</h4>
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="{{ path('collection_group_index') }}" class="btn btn-primary" style="margin-right: 10px;">Koleksiyon
                Grubu Listesi</a>
            <a href="{{ path('collection_group_edit', {'id': collection_group.id}) }}" class="btn btn-warning"
               style="margin-right: 10px;">Düzenle</a>
            <!-- Button trigger modal -->
            <a class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                Sil
            </a>
            {{ include('collection_group/_delete_form.html.twig') }}
        </div>
        <!-- /.box-footer-->
    </div>
{% endblock %}
